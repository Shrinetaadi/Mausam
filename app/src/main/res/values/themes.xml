<resources>
    <!-- Base application theme. -->
    <style name="Theme.Mausam" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#56ffffff</item>
        <item name="colorPrimaryVariant">#56FFFFFF</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <!-- Customize your theme here. -->
        <item name="android:windowDrawsSystemBarBackgrounds">false</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>

    <style name="LightTextColor">
        <item name="android:textColor">@color/appWhite</item>
        <item name="android:fontFamily">@font/varelaround_regular</item>
    </style>

    <style name="DarkTextColor">
        <item name="android:textColor">@color/appBlack</item>
        <item name="android:fontFamily">@font/varelaround_regular</item>
    </style>
</resources>